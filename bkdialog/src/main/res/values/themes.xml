<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BKDialogParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_8dp</item>
        <item name="android:background">@drawable/bkdialog_bg_alert</item>
        <item name="android:maxWidth">@dimen/_450dp</item>
    </style>

    <style name="BKDialogTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:textColor">@color/bkDialog_default</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BKDialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="BKDialogBodyLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_5dp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_marginRight">@dimen/_5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BKDialogButtonLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
    </style>

    <style name="BKDialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_32dp</item>
        <item name="android:minWidth">@dimen/_95dp</item>
        <item name="android:layout_marginTop">@dimen/_7dp</item>
        <item name="android:layout_marginBottom">@dimen/_7dp</item>
        <item name="android:layout_marginLeft">@dimen/_7dp</item>
        <item name="android:layout_marginRight">@dimen/_7dp</item>
        <item name="android:paddingLeft">@dimen/_15dp</item>
        <item name="android:paddingRight">@dimen/_15dp</item>
        <item name="android:background">@drawable/bkdialog_bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/bkDialog_text_button</item>
    </style>

</resources>